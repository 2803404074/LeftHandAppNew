<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white">

        <TextView
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示"/>

        <TextView
            android:id="@+id/tvTips"
            android:textColor="@color/textTitleOld"
            android:textSize="13sp"
            android:layout_marginVertical="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="即将退出，是否继续？"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/speedTextNormal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/main01"
                android:layout_marginVertical="15dp"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/shape_stroke_main"
                android:layout_height="wrap_content"
                android:text="取消"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/speedTextNormal"/>
            <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginVertical="15dp"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/shape_style_04_b"
                android:layout_height="wrap_content"
                android:text="确认"/>
        </LinearLayout>

    </LinearLayout>
</layout>
