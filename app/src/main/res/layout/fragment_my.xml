<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_style_03"
        android:layout_height="match_parent">

        <com.zhutian.baselibrary.ui.widget.MyScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingBottom="78dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:elevation="1dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/my_bg" />

                    <com.zhutian.baselibrary.ui.widget.RoundImageView
                        android:id="@+id/ivContent01"
                        android:layout_marginLeft="14dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="60dp"/>
                    <TextView
                        android:id="@+id/tvNickName"
                        android:layout_marginTop="60dp"
                        android:layout_toRightOf="@+id/ivContent01"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="点击登录"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/tvQd"
                        android:layout_alignParentRight="true"
                        android:layout_width="80dp"
                        android:layout_height="33dp"
                        android:gravity="center"
                        android:layout_marginTop="75dp"
                        android:background="@drawable/shape_style_02"
                        android:textColor="@color/white"
                        android:text="点击签到"/>

                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:paddingHorizontal="14dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rlXnb"
                            android:layout_width="0dp"
                            android:background="@drawable/xnb_bg"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/ivXnb"
                                android:layout_width="33dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="5dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/my_xnb"/>

                            <TextView
                                android:id="@+id/tvXnb"
                                android:layout_toRightOf="@+id/ivXnb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_marginTop="20dp"
                                android:textColor="#FFD56F"
                                android:textStyle="bold"
                                android:text="虚拟币"/>
                            <TextView
                                android:layout_below="@+id/tvXnb"
                                android:textColor="#FFD56F"
                                android:layout_toRightOf="@+id/ivXnb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我的币数：10000"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlExtension"
                            android:layout_width="0dp"
                            android:background="@drawable/xnb_bg"
                            android:layout_marginLeft="14dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/ivTg"
                                android:layout_width="33dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="5dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/my_tuiguang"/>

                            <TextView
                                android:id="@+id/tvTg"
                                android:layout_toRightOf="@+id/ivTg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_marginTop="20dp"
                                android:textColor="#FFD56F"
                                android:textStyle="bold"
                                android:text="推广"/>
                            <TextView
                                android:layout_below="@+id/tvTg"
                                android:textColor="#FFD56F"
                                android:layout_toRightOf="@+id/ivTg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="推广获取虚拟币"/>
                        </RelativeLayout>
                    </LinearLayout>


                </RelativeLayout>

                <TextView
                    android:id="@+id/tvMyLove"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_love"
                    android:text="我喜欢的"
                    android:foreground="?android:attr/selectableItemBackground"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="14dp"
                    android:padding="15dp"
                    android:background="@drawable/shape_stroke_my_top"
                    android:textSize="13sp"
                    android:textColor="#24253D"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:drawableRight="@drawable/back_right"/>

                <TextView
                    android:id="@+id/tvMess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_message"
                    android:text="消息通知"
                    android:foreground="?android:attr/selectableItemBackground"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_marginHorizontal="14dp"
                    android:padding="15dp"
                    android:background="@drawable/shape_stroke_my_centent"
                    android:textSize="13sp"
                    android:textColor="#24253D"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:drawableRight="@drawable/back_right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    style="@style/Widget.AppCompat.Button"
                    android:drawableLeft="@drawable/my_group"
                    android:text="交流群"
                    android:layout_marginHorizontal="14dp"
                    android:padding="15dp"
                    android:background="@drawable/shape_stroke_my_centent"
                    android:textSize="13sp"
                    android:textColor="#24253D"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:drawableRight="@drawable/back_right"/>

                <TextView
                    android:id="@+id/tvFeeBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    style="@style/Widget.AppCompat.Button"
                    android:drawableLeft="@drawable/my_opinion"
                    android:text="意见反馈"
                    android:padding="15dp"
                    android:layout_marginHorizontal="14dp"
                    android:background="@drawable/shape_stroke_bottom_yinying_my"
                    android:textSize="13sp"
                    android:textColor="#24253D"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:drawableRight="@drawable/back_right"/>

                <TextView
                    android:id="@+id/tvHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    style="@style/Widget.AppCompat.Button"
                    android:drawableLeft="@drawable/my_history"
                    android:text="历史记录"
                    android:padding="15dp"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_stroke_my_top"
                    android:textSize="13sp"
                    android:textColor="#24253D"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:drawableRight="@drawable/back_right"/>

                <TextView
                    android:id="@+id/tvLogOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    style="@style/Widget.AppCompat.Button"
                    android:drawableLeft="@drawable/my_setting"
                    android:text="退出登录"
                    android:padding="15dp"
                    android:background="@drawable/shape_stroke_bottom_yinying_my"
                    android:textSize="13sp"
                    android:layout_marginHorizontal="14dp"
                    android:textColor="#24253D"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:drawableRight="@drawable/back_right"/>
            </LinearLayout>
        </com.zhutian.baselibrary.ui.widget.MyScrollView>
    </RelativeLayout>
</layout>
