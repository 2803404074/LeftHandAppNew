<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginVertical="4dp"
        android:id="@+id/rlContent"
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/shape_white">


        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="90dp">
            <com.zhutian.baselibrary.ui.widget.RoundAngleImageView
                android:id="@+id/ivContent"
                android:scaleType="centerCrop"
                android:layout_width="140dp"
                android:layout_height="90dp"
                app:radio="8dp" />
            <TextView
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:textSize="10.5sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:56:09"/>
        </RelativeLayout>


        <RelativeLayout
            android:paddingHorizontal="3dp"
            android:paddingVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvTitle"
                android:textColor="@color/textTitleOld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="外企斯文男在野外大干一场外企 斯文男在野斯文男在野斯文男在野"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.5"
                android:textSize="10.5sp"
                android:drawablePadding="3dp"
                android:textColor="@color/main02"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/xing"/>

            <TextView
                android:textColor="@color/textTitleSun"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="番号:JU00023"/>
        </RelativeLayout>

    </LinearLayout>
</layout>
